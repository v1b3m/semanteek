{
  "name": "semanteek",
  "displayName": "Semanteek",
  "description": "Natural-language search inside your codebase",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "semanteek.index",
        "title": "Semanteek: Index workspace"
      },
      {
        "command": "semanteek.search",
        "title": "Semanteek: Semantic search"
      },
      {
        "command": "semanteek.searchInPanel",
        "title": "Search",
        "icon": "$(search)"
      },
      {
        "command": "semanteek.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "semanteek.clear",
        "title": "Clear Results",
        "icon": "$(clear-all)"
      }
    ],
    "views": {
      "semanteek": [
        {
          "id": "semanteek.searchPanel",
          "name": "Semanteek Search",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "semanteek",
          "title": "Semanteek",
          "icon": "$(search)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "semanteek.searchInPanel",
          "when": "view == semanteek.searchPanel",
          "group": "navigation"
        },
        {
          "command": "semanteek.refresh",
          "when": "view == semanteek.searchPanel",
          "group": "navigation"
        },
        {
          "command": "semanteek.clear",
          "when": "view == semanteek.searchPanel",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc && npm run copy-assets",
    "copy-assets": "cp -r media out/"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.0"
  },
  "dependencies": {
    "@xenova/transformers": "^2.5.0",
    "axios": "^1.4.0",
    "google-auth-library": "^10.4.1",
    "openai": "^6.3.0"
  }
}
